
@{
    ViewBag.Title = "_Layout";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="~/Content/assets/img/ico/favicon.ico">
    <link rel="apple-touch-icon" sizes="144x144" href="~/Content/assets/img/ico/apple-touch-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/Content/assets/img/ico/apple-touch-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/Content/assets/img/ico/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" href="~/Content/assets/img/ico/apple-touch-icon-57x57.png">

    <title>Smash by Distinctive Themes</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/assets/css/animate.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Content/assets/css/style.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/Content/assets/font-awesome-4.1.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/pe-icons.css" rel="stylesheet">

    <!-- jQuery -->
    <script src="~/Content/assets/js/jquery.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->



</head>

<body id="page-top" class="index">

    <div class="preloader">
        <div class="preloader-img">
            <img src="~/Content/assets/img/loading-bars.svg" width="100" alt="Loading icon" />
        </div>
    </div>

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-shrink bounceInDown" data-wow-delay="2s">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">Smash</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-hover="dropdown" data-toggle="dropdown">Employee Menu<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Index","Reservations")">Reservations</a></li>
                            <li><a href="@Url.Action("Index","Locations")">Locations</a></li>
                            <li><a href="@Url.Action("Index","Vases")">Vases</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-hover="dropdown" data-toggle="dropdown">Admin Menu<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Index","UsersAdmin")">Users</a></li>
                            <li><a href="@Url.Action("Index","RolesAdmin")">User Roles</a></li>
                            <li><a href="@Url.Action("Index","Locations")">Locations</a></li>
                            <li><a href="@Url.Action("Index","Reservations")">Reservations</a></li>
                            <li><a href="@Url.Action("Index","Vases")">Vases</a></li>
                            <li><a href="@Url.Action("Index","OwnerDetails")">Owners</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-hover="dropdown" data-toggle="dropdown">Menu <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Index","Home")">Home</a></li>
                            @if (Request.IsAuthenticated)
                            {
                                <li><a href="@Url.Action("Index", "Manage")">Account</a></li>
                                <li><a href="@Url.Action("Index", "Vases")">My Vase</a></li>
                                <li><a href="index-coming-soon.html">Reserve Spot</a></li>
                            }
                            <li><a href="@Url.Action("Contact", "Contact")">Contact</a></li>
                            @if (Request.IsAuthenticated)
                            {
                                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <li><a id="customanchor" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                                }
                            }
                            else
                            {
                                <li><a href="@Url.Action("Login", "Account")">Log In</a></li>
                                <li><a href="@Url.Action("Register","Account")">Register</a></li>
                            }

                        </ul>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <div id="search-wrapper">
        <button type="button" class="close">×</button>
        <form>
            <input type="search" value="" placeholder="type keyword(s) here" />
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>

    @RenderBody()

    <footer class="divider-wrapper-dark">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <span class="copyright wow fadeInUp">Designed by Distinctive Themes</span>
                </div>
                <div class="col-md-4 text-center">
                    <a href="#" id="back-to-top"><i class="pe-7s-angle-up fa-4x"></i></a>
                </div>
                <div class="col-md-4">
                    <ul class="list-inline social-buttons wow fadeInUp">
                        <li>
                            <a class="twitter" href="#"><i class="fa fa-twitter"></i></a>
                        </li>
                        <li>
                            <a class="facebook" href="#"><i class="fa fa-facebook"></i></a>
                        </li>
                        <li>
                            <a class="google" href="#"><i class="fa fa-google-plus"></i></a>
                        </li>
                        <li>
                            <a class="linkedin" href="#"><i class="fa fa-linkedin"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/assets/js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="~/Content/assets/js/plugins.js"></script>

    <!-- Plugins -->
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <script src="~/Content/assets/js/jqBootstrapValidation.js"></script>
    @*<script src="~/Content/assets/js/contact_me.js"></script>*@

    <!-- Custom JavaScript -->
    <script src="~/Content/assets/js/init.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            'use strict';
            jQuery('#headerwrap').backstretch([
                "/Content/assets/img/bg/bg1.jpg",
                "/Content/assets/img/bg/bg2.jpg",
                "/Content/assets/img/bg/bg3.jpg"
            ], { duration: 8000, fade: 500 });

            $("#mapwrapper").gMap({
                controls: false,
                scrollwheel: false,
                markers: [{
                    latitude: 40.7566,
                    longitude: -73.9863,
                    icon: {
                        image: "/Content/assets/img/marker.png",
                        iconsize: [44, 44],
                        iconanchor: [12, 46],
                        infowindowanchor: [12, 0]
                    }
                }],
                icon: {
                    image: "/Content/assets/img/marker.png",
                    iconsize: [26, 46],
                    iconanchor: [12, 46],
                    infowindowanchor: [12, 0]
                },
                latitude: 40.7566,
                longitude: -73.9863,
                zoom: 14
            });
        });
    </script>

    @RenderSection("scripts", required: false)

</body>

</html>


